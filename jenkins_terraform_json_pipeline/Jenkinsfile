import groovy.json.JsonSlurper

pipeline {
    agent any

    stages {
        stage('Parse & Apply Terraform') {
            steps {
                checkout scm
                script {
                    def jsonText = readFile('jenkins_terraform_json_pipeline/config.json')
                    def config = new JsonSlurper().parseText(jsonText)

                    def tfFlags = ""
                    config.vars.each { k, v ->
                        tfFlags += "-var '${k}=${v}' "
                    }

                    config.modules.each { mod ->
                        echo "Terraform apply for module: ${mod}"
                        bat """
                            cd jenkins_terraform_json_pipeline\\modules\\${mod}
                            terraform init
                            terraform apply ${tfFlags} -auto-approve
                        """
                    }
                }
            }
        }
    }
}
